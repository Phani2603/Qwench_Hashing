# QUENCH RBAC Frontend - Production Environment Variables
# Generated on: June 8, 2025
# IMPORTANT: Replace placeholder values with your actual production values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Replace with your actual production backend domain (Railway deployment)
NEXT_PUBLIC_API_URL=https://your-backend-railway-domain.railway.app/api

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Replace with your actual production frontend domain (Vercel deployment)
NEXT_PUBLIC_APP_URL=https://your-production-frontend-domain.vercel.app

# =============================================================================
# QR CODE CONFIGURATION
# =============================================================================
# This should match your backend QR_BASE_URL
NEXT_PUBLIC_QR_BASE_URL=https://your-production-frontend-domain.vercel.app

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SECURE_MODE=true
NEXT_PUBLIC_HTTPS_ONLY=true

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Add your analytics IDs here if needed
# NEXT_PUBLIC_GOOGLE_ANALYTICS=GA-XXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
NEXT_PUBLIC_ENABLE_QR_GENERATION=true
NEXT_PUBLIC_ENABLE_ADMIN_ANALYTICS=true
NEXT_PUBLIC_ENABLE_USER_PROFILES=true
